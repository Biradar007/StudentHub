                changeYear: true,
                yearRange: "-60:+0"
            });
            $('#CoursesDropDown').select2({
                tags: true,
            });

            var table = $('.table').DataTable({
            });
        });

        function StudentDetails(StudentId) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("StudentDetails", "Student")',
                data: { StudentId: StudentId },
                success: function (data) {
                    $('#StudentDetailsModal').html('');
                    $('#StudentDetailsModal').html(data);
                    $('#StudentDetails').modal('show');
                },
                error: function (data, error, status) {
                    console.log(error, status);
                }
            });

        }
        function DeleteStudent(StudentId) {
            debugger;
                swal({
                    title: "Question!",
                    text: "Are you sure you want to delete the record?",
                    type: "question",
                    confirmButtonText: "Yes",
                    showCancelButton: true
                })
                    .then((result) => {
                        if (result.value) {
                             $.ajax({
                                            type: 'POST',
                                            url: '@Url.Action("DeleteStudent", "Student")',
                                            data: { StudentId: StudentId },
                                            success: function (data) {
                                                window.location.href = '@Url.Action("StudentList", "Student")';
                                            },
                                            error: function (data, error, status) {
                                                console.log(error, status);
                                            }
                             });
                        }
                    })
        }       
    </script>
